<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        android:background="@android:color/transparent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent">
            <ImageView
                android:id="@+id/cardview_artist_image"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                />
            <TextView
                android:id="@+id/cardview_artist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/cardview_artist_image"
                android:fontFamily="@font/no_reference"
                android:textSize="30sp"
                android:text="ARIST NAME"/>
            <TextView
                android:id="@+id/cardview_song_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/cardview_artist_name"
                android:fontFamily="@font/no_reference"
                android:textSize="30sp"
                android:text="SONG TITLE"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>



</FrameLayout>