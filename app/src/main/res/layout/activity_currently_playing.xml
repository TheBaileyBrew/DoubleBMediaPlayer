<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:diagonal="http://schemas.android.com/tools"
    android:background="@color/colorPrimaryDark">
    
    <com.github.florent37.diagonallayout.DiagonalLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        app:diagonal_angle="20"
        diagonal:diagonal_direction="left"
        diagonal:diagonal_position="bottom">
        <ImageView
            android:id="@+id/now_playing_artist_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:elevation="10dp"
            android:src="@drawable/andymckee_800"/>
    </com.github.florent37.diagonallayout.DiagonalLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">
        <com.xw.repo.BubbleSeekBar
            android:id="@+id/song_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="44dp"
            android:layout_marginLeft="46dp"
            android:layout_marginRight="46dp"
            app:bsb_max="100"
            app:bsb_min="0"
            app:bsb_progress="17"
            app:bsb_section_count="4"
            app:bsb_section_text_position="bottom_sides"
            app:bsb_show_section_mark="true"
            app:bsb_hide_bubble="true"
            app:bsb_show_thumb_text="false"
            app:bsb_track_color="@color/colorPrimary"
            app:bsb_second_track_color="@color/colorPrimaryLight"
            app:bsb_touch_to_seek="false"/>
        <LinearLayout
            android:id="@+id/song_options_menu"
            android:layout_above="@id/song_progress"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/song_shuffle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:textSize="32sp"
                android:fontFamily="@font/no_reference"
                android:textColor="@color/colorAccentFade"
                android:text="SHUFFLE"/>
            <TextView
                android:id="@+id/song_loop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:textSize="32sp"
                android:fontFamily="@font/no_reference"
                android:textColor="@color/colorAccentFade"
                android:text="LOOP"/>
            <TextView
                android:id="@+id/song_playlists"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:textSize="32sp"
                android:fontFamily="@font/no_reference"
                android:textColor="@color/colorAccentFade"
                android:text="LIST"/>
        </LinearLayout>
        <Button
            android:id="@+id/song_play_pause"
            android:layout_above="@id/song_options_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:textColor="@color/colorAccent"
            android:textSize="36sp"
            android:fontFamily="@font/no_reference"
            android:text="PLAY"/>
        <Button
            android:id="@+id/song_rewind"
            android:layout_above="@id/song_options_menu"
            android:layout_toLeftOf="@id/song_play_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:textColor="@color/colorAccent"
            android:textSize="36sp"
            android:text="@string/left_arrow"/>
        <Button
            android:id="@+id/song_forward"
            android:layout_above="@id/song_options_menu"
            android:layout_toRightOf="@id/song_play_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:textColor="@color/colorAccent"
            android:textSize="36sp"
            android:text="@string/right_arrow"/>
        <TextView
            android:id="@+id/now_playing_artist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="125dp"
            android:layout_marginRight="32dp"
            android:layout_alignParentEnd="true"
            android:layout_above="@id/song_play_pause"
            android:fontFamily="@font/no_reference"
            android:textSize="66sp"
            android:elevation="6dp"
            android:textColor="@color/colorPrimaryText"
            android:text="ARTIST NAME"/>
        <TextView
            android:id="@+id/now_playing_song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_marginRight="32dp"
            android:layout_alignParentEnd="true"
            android:layout_above="@id/song_play_pause"
            android:fontFamily="@font/no_reference"
            android:textSize="62sp"
            android:elevation="6dp"
            android:textColor="@color/colorPrimaryText"
            android:text="SONG NAME"/>


    </RelativeLayout>



</android.support.constraint.ConstraintLayout>